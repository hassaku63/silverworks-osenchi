    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "osenchi",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "runtimeArgs": [
                "-r",
                "./node_modules/ts-node/register/transpile-only"
            ],
            "args": [
                "${workspaceFolder}/bin/osenchi.ts"
            ],
            "env": {
                "DEBUG": "true"
            }
        }
    ]
}
